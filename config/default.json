{
    // 端口。
    "port": 8888,

    // 数据库。
    "db": "mongodb://localhost/zhihu",
    "poolSize": 10,
    "auto_reconnect": true,

    // 知乎日报官方 API。
    "zhihu_daily_api": "http://news-at.zhihu.com/api/4/",

    // 爬虫。
    "crawler":
    {
        // 是否允许缓存（自动离线知乎日报）。
        "enabled": true,

        // 延迟启动（单位：秒）。
        "delay": 10,

        // 最大缓存天数（从今天开始计算，过期的日报将被删除）。
        "max_age": 30,

        // 抓取不同日期之间的时间间隔（单位：秒）。
        "day_interval": 3,

        // 抓取不同日报之间的时间间隔（单位：秒）。
        "daily_interval": 1,

        // 抓取日报时的重试次数。
        "daily_retry": 3
    },

    // 启用用户认证（需要登录）。
    "enable_auth": false,

    // 用户名（登录用的咯，密码暂时不告诉你们）。
    "username": "zoro"
}
