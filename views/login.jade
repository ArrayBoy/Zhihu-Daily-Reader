extends ./templates/layout

append res
    link(href=map.zdr.css, rel="stylesheet")

append body
    #main.container
        #login.auth-form
            form(method="post", action="/session")
                if error
                    .auth-form-message
                        .message #{error.message}
                .auth-form-body
                    label(for="login_field") Username
                    if error
                        input#login_field.form-control(
                            value="#{error.username}"
                            type="text",
                            name="login",
                            autocapitalize="off",
                            autocorrect="off",
                            tabindex="1"
                        )
                    else
                        input#login_field.form-control(
                            type="text",
                            name="login",
                            autocapitalize="off",
                            autocorrect="off",
                            autofocus="autofocus",
                            tabindex="1"
                        )
                    label(for="password_field") Password
                    input#password_field.form-control(
                        type="password",
                        name="password",
                        autofocus="autofocus",
                        tabindex="2"
                    )
                    input(
                        type="submit",
                        name="submit",
                        value="Sign in",
                        tabindex="3"
                    )
