{
    "env":
    {
        "browser": true,
        "es6": true
    },
    "extends":
    [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions":
    {
        "ecmaFeatures":
        {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins":
    [
        "react"
    ],
    "rules":
    {
        "brace-style":
        [
            "error",
            "allman"
        ],
        "indent":
        [
            "error",
            4
        ],
        no-unused-vars:
        [
            "error",
            {
                "args": "none"
            }
        ],
        "quotes":
        [
            "error",
            "double"
        ],
        "semi":
        [
            "error",
            "always"
        ]
    }
}